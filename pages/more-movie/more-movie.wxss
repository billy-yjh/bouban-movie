@import '/pages/movie-list/movie-list';
.session-tab{
  display: flex;
  flex-direction: row;
  width: 100%;
  position: fixed;
  top: 0;
  background: white;
  border-width: 2rpx 0;
  border-color: #e9e9e9;
  border-style: solid;
  z-index: 999;
}
.tab-name{
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
}
.tab-select{
  color: lightgreen;
  border-bottom: 4rpx solid lightgreen;
}
.tab-nomal{
  color: #ccc;
}
.session-movie{
  margin-top: 84rpx;
  background: white;
}
.scroll-movie{
  height: 100vh;
}