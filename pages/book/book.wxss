@import "/pages/movie-grid/movie-grid";
.movie-show{
  background-color: white;
  border-width: 1rpx 0;
  border-style: solid;
  border-color: #e9e9e9;
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
}
.show-header{
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
}
.header-title{
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
}
.header-more{
  color: #32dd32;
}
.show-content{
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  white-space: nowrap;
}
.movie-scroll{
  width: 100%;
  white-space: nowrap;
}
.movie-comming{
  background-color: white;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}